{
  "languageserver": {
    "ccls" : {
      "command"   : "3rdparty/ccls/bin/ccls",
      "filetypes" : [
        "c", "h", "cpp", "hpp"
      ],
      "initializationOptions" : {
        "cache" : {
          "directory" : "3rdparty/ccls/cache"
        },
        "highlight" : {
          "lsRanges" : true
        }
      }
    }
  },
  "coc.preferences.timeout"     : 1000,
  "coc.preferences.autoTrigger" : "none"
}
