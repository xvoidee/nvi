" vi:syntax=vim

augroup diffcolors
  autocmd!
  autocmd Colorscheme * call s:SetDiffHighlights()
augroup END

function! s:SetDiffHighlights()
  highlight DiffAdd    gui=none guifg=none    guibg=#3D4D36
  highlight DiffDelete gui=none guifg=#5A3F3F guibg=#4B3535
  highlight DiffChange gui=none guifg=none    guibg=#342F24
  highlight DiffText   gui=none guifg=none    guibg=#6D7E99
endfunction

